<?xml version="1.0" encoding="UTF-8"?>
<ffqueue>
	<global>
		<debuglevel>2</debuglevel>
		<slots>12</slots>
	</global>
	<path location="/tmp">
		<debuglevel>5</debuglevel>
		<desc>Test watchfolder with spaces</desc>
		<poll-time>5</poll-time>	<!--check this number of seconds -->
		<stable-iterations>2</stable-iterations> <!--trigger a file if it's been there for this long -->
		<!--you should NOT use relative paths here.... paths are relative to where the daemon was started from, so you don't know...-->
		<command>mv {filepath} complete/;sleep 20s</command>
	</path>	
